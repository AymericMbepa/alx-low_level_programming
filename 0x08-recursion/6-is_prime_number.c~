#include "main.h"

/**
 * is_prime_number - function that returns 1 if the input integer
 * is a prime number, otherwise return 0
 * @n: an input integer
 * Return: 1 if the input integer is a prime number, otherwise return
 */

int is_prime_number(int n)
{
	if (n == 1)
		return (0);
	if (n == 3)
		return (1);
	if (n < 0)
		return (0);
	if (n % 2 == 0)
		return (0);
	if (n % 3 == 0)
		return (0);
	return (1);
}
